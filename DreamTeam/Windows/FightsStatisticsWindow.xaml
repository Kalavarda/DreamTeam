<Window x:Class="DreamTeam.Windows.FightsStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:DreamTeam.UserControls;assembly=DreamTeam.UserControls"
        Title="Fights statistics" Height="400" Width="300" ShowInTaskbar="False">

    <Window.Resources>
        <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBox}"/>
        <Style TargetType="DataGrid" BasedOn="{StaticResource DefaultDataGrid}"/>
    </Window.Resources>

    <Grid>
        <userControls:FightsStatisticsControl x:Name="_statisticsControl"/>
    </Grid>
</Window>
