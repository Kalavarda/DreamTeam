<UserControl x:Class="DreamTeam.Controls.SelectionHudControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas x:Name="_canvas">
        <Ellipse x:Name="_heroSelection" Stroke="Green" StrokeThickness="2" Opacity="0.5" Visibility="Collapsed"/>
        <Ellipse x:Name="_targetSelection" Stroke="Red" StrokeThickness="2" Opacity="0.5" Visibility="Collapsed"/>
    </Canvas>
</UserControl>
