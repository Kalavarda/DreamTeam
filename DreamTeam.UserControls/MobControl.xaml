<UserControl x:Class="DreamTeam.UserControls.MobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:DreamTeam.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="10">
    <Grid>
        <Ellipse Fill="#80FF0000"/>
        <Canvas>
            <userControls:RangeControl x:Name="_hpControl" Height="10" MainBrush="Yellow" Canvas.Top="-10"/>
        </Canvas>
    </Grid>
</UserControl>
