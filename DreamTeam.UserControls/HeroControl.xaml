<UserControl x:Class="DreamTeam.UserControls.HeroControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:DreamTeam.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="25">
    <Grid>
        <Ellipse x:Name="_ellipse" Fill="#008000"/>
        <TextBlock x:Name="_txt" FontSize="0.16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Yellow" Visibility="Collapsed"/>
    </Grid>
</UserControl>
