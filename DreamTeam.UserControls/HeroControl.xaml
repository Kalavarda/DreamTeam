<UserControl x:Class="DreamTeam.UserControls.HeroControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:DreamTeam.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Ellipse x:Name="_ellipse" Fill="#008000" MouseDown="OnMouseDown"/>
        <TextBlock x:Name="_txt" FontSize="0.16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Yellow" MouseDown="OnMouseDown"/>
        <Canvas>
            <userControls:RangeControl x:Name="_hpControl" Height="10" MainBrush="Yellow" Canvas.Top="-10"/>
        </Canvas>
    </Grid>
</UserControl>
